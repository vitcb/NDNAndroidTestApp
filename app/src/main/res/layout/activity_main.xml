<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="vittorio.com.ndntestapp.MainActivity">

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/serviceStatusLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:text="SERVICE STATUS: "
            android:textColor="@android:color/background_dark"/>

        <TextView
            android:id="@+id/serviceStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/serviceStatusLabel"
            android:textColor="@color/colorPrimary"/>

        <TextView
            android:id="@+id/clientAddressLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/serviceStatusLabel"
            android:layout_marginRight="5dp"
            android:layout_marginTop="30dp"
            android:text="REQUEST FROM: "
            android:textColor="@android:color/background_dark"/>

        <TextView
            android:id="@+id/clientAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/serviceStatusLabel"
            android:layout_marginTop="30dp"
            android:layout_toRightOf="@+id/clientAddressLabel"
            android:textColor="@color/colorPrimary"/>


        <TextView
            android:id="@+id/actionTypeLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/clientAddressLabel"
            android:layout_marginRight="5dp"
            android:layout_marginTop="30dp"
            android:text="ACTION TYPE: "
            android:textColor="@android:color/background_dark"/>

        <TextView
            android:id="@+id/actionType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/clientAddressLabel"
            android:layout_marginTop="30dp"
            android:layout_toRightOf="@+id/actionTypeLabel"
            android:textColor="@color/colorPrimary"/>

        <TextView
            android:id="@+id/ndnResponseLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/actionTypeLabel"
            android:layout_marginRight="5dp"
            android:layout_marginTop="30dp"
            android:text="NDN response: "
            android:textColor="@android:color/background_dark"/>

        <TextView
            android:id="@+id/ndnResponse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_below="@id/actionTypeLabel"
            android:layout_toRightOf="@id/ndnResponseLabel"
            android:textColor="@color/colorPrimary"/>

        <TextView
            android:id="@+id/msgToClientLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ndnResponse"
            android:layout_marginRight="5dp"
            android:layout_marginTop="30dp"
            android:text="Response to client: "
            android:textColor="@android:color/background_dark"/>

        <TextView
            android:id="@+id/msgToClient"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ndnResponse"
            android:layout_marginTop="30dp"
            android:layout_toRightOf="@id/msgToClientLabel"
            android:textColor="@color/colorPrimary"/>

    </RelativeLayout>

</ScrollView>